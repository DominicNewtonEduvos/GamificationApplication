<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090606"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:padding="12dp"
        tools:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:gravity="clip_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="24sp"
                android:text="Profile"
                android:textColor="#F6A42E"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="240dp"
                android:layout_height="119dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16sp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                tools:layout_width="match_parent"
                tools:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4sp"
                android:text="Name Surname"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                android:text="Bobby Bob"
                android:textAlignment="center"
                android:textColor="#FBF4F4"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4sp"
                android:text="Password"
                android:textAlignment="center"
                android:textColor="#999999"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextTextPassword3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:text="testPass@123"
                    android:textColor="#FDFCFC"
                    android:textSize="20sp"
                    tools:layout_weight="1"
                    tools:layout_width="0dp" />

                <ImageButton
                    android:id="@+id/togglePasswordBtn"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_view" />
            </LinearLayout>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:ems="10"
                android:hint="Enter New Name"
                android:inputType="text|textPersonName"
                android:visibility="gone" />

            <TextView
                android:id="@+id/changePasswordLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8sp"
                android:text="Change Password"
                android:textAlignment="center"
                android:textColor="#CDCAC3"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/milestonesLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="Current Milestone Level (Lvl:12)"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <ProgressBar
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="20"
                android:max="100"
                android:progress="65"
                android:progressTint="#4CAF50" />

            <Button
                android:id="@+id/badgesButton"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="#4CAF50"
                android:text="My Badges"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:background="#000001"
                android:padding="24sp"
                android:text="The beautiful thing about learning is that nobody can take it away from you."
                android:textAlignment="center"
                android:textColor="#cccccc"
                android:textSize="24sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#D32F2F"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="View Notes"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#d32f2f"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Upload Notes"
                    app:cornerRadius="8dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>